<nav aria-label="Page navigation example">
    <ul class="pagination">

        <% if (currentPage !== 1 && previousPage !== 1) { %>
            <li class="page-item"><a class="page-link" href="?page=1">1</a></li>
        <% } %>

        <% if (hasPreviousPage) { %>
            <li class="page-item"><a class="page-link" href="?page=<%= previousPage %> "><%= previousPage %></a></li>
        <% } %>

        <li class="page-item active"><a class="page-link active" href="?page=<%= currentPage %> "><%= currentPage %></a></li>

        <% if (hasNextPage) { %>
            <li class="page-item"><a class="page-link" href="?page=<%= nextPage %> "><%= nextPage %></a></li>
        <% } %>

        <% if (currentPage !== lastPage && nextPage !== lastPage) { %>
            <li style="letter-spacing: 2px;"><h4>....</h4></li>
            <li class="page-item"><a class="page-link" href="?page=<%= lastPage %> "><%= lastPage %></a></li>
        <% } %>

    </ul>
</nav>