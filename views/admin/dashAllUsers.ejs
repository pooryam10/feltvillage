
<%- include("../includes/header.ejs") %> 

<div class="d-flex justify-content-end mr-5 mt-1 dash-back-icon">
    <a href="/dashboard" class="text-reset"><i class="fa fa-arrow-left"></i></a>
</div>

<div class="container">
    <%- include("../messages/errFlash.ejs") %> 
    <%- include("../messages/successFlash.ejs") %> 
    <div class="row">
        <% for( let i = 0; i < users.length; i++ ) { %>
            <div class="col-md-6 col-12 px-4">
                <div class="card shadow border border-info">
                    <div class="card-header border border-info">
                        <h4><%= users[i].fullname %> </h4>
                    </div>
                    <div class="card-body d-flex justify-content-between ">
                        <p><%= users[i].email %> </p>
                        <p><%= users[i].phoneNumber %> </p>
                    </div>
                    <div class="card-footer d-flex justify-content-between border border-info">
                        <div>
                            <p><%= formatDate(users[i].createdAt) %> </p>
                        </div>
                        <div>
                            <a href="/dashboard/delete-user/<%= users[i].id %> " class="btn btn-danger"><i class="fa fa-trash"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>

    </div>
</div>
<%- include("../includes/footer.ejs") %> 
