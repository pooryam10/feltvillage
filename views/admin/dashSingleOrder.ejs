<%- include("../includes/header.ejs") %> 
    <main>
        <section class="info-section mt-4">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-lg-6 product-introduction card rounded ml-5">
                        <p class="shopping-card mt-2">سفارشات</p>
                        <p class="product-quantity font-weight-bold"><%= products.length %>  کالا</p>
                        <% for( let i = 0; i < products.length; i++ ) { %>
                            <div class="d-flex align-items-center border-bottom">
                                <div>
                                    <img src="/uploads/pictures/<%= products[i].picture %> " class="img-fluid image-card" alt="...">
                                </div>
                                <div class="card-body">
                                    <h5 class="text-nowrap card-title title mb-2"><%= products[i].name %> </h5>
                                        <div class="d-flex align-items-center card-text">
                                            <p class="card-color"><%= products[i].color %> </p>
                                        </div>
                                        <p class="warranty-text mt-2 card-text "> <img src="/img/warranty-10277.svg"
                                                alt="" class="warranty-icon"> گارانتی ۳۶ ماهه همگام (پردازشگر ستاره خاور)
                                        </p>
                                        <h5 class="card-text text-right text-black font-weight-bold"><%= products[i].realPrice %> 
                                            تومان
                                        </h5>
                                </div>
                            </div>
                        <% } %>

                    </div>
                    <div class="orders col-12 col-lg-5 card rounded mt-5 mt-lg-0">
                        <div class="card-body">
                            <p class="order-details mt-2 border-bottom pb-3">جزئیات سفارش</p>
                            <div class="d-flex justify-content-between align-items-center border-bottom pb-3">
                                <span class="order-tracking">تعداد کالا: <%= products.length %> </span>
                                <span class="order-date">تاریخ ثبت سفارش : <%= formatDate(order.createdAt) %> </span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center border-bottom pb-3">
                                <span class="transferee mt-2">تحویل گیرنده : <%= order.user.fullname %> </span>
                                <span class="phone-number mt-2">تلفن همراه : <%= order.user.phoneNumber %> </span>
                            </div>
                            <p class="address text-justify mt-2 border-bottom pb-3">
                                <%= order.address %> 
                            </p>
                            <div class="d-flex align-items-center justify-content-between">
                                <span class="total-price text-nowrap">جمع مبلغ سفارش</span>
                                <h5 class="total-price card-text font-weight-bold text-nowrap"><%= totalPrice %> 
                                    تومان
                                </h5>
                            </div>
                            <a class="btn btn-success d-block mt-4" href="/dashboard/complete-order/<%= order.id %> " role="button">تکمیل سفارش</a>
                        </div>
                    </div>

        </section>
    </main>
<%- include("../includes/footer.ejs") %> 