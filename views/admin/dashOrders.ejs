<%- include("../includes/header.ejs") %>

    <div class="d-flex justify-content-end mr-5 mt-1 dash-back-icon">
        <a href="/dashboard" class="text-reset"><i class="fa fa-arrow-left"></i></a>
    </div>

    <div class="haeder d-flex w-100 justify-content-center mt-1">
        <div class="mr-4 <%= path === '/uncomplet-orders' ? 'dash-active' : '' %> ">
            <a href="/dashboard/uncomplet-orders " class="text-reset">سفارشات تکمیل نشده</a>
        </div>
        <div class="mr-4 <%= path === '/complet-orders' ? 'dash-active' : '' %>">
            <a href="/dashboard/completed-orders " class="text-reset">سفارشات تکمیل شده</a>
        </div>
    </div>

    <div class="w-50 mx-auto mt-2">
        <%- include("../messages/successFlash.ejs") %>
    </div>

    <hr>

    <section class="container">
        <div class="row">
            <% for( let i=0; i < orders.length; i++ ) { %>
                <a href="/dashboard/single-order/<%= orders[i].id %> "
                    class="col-12 d-flex justify-content-between order-box p-3 text-reset <%= path === '/complet-orders' ? 'complete-order' : '' %> ">
                    <div>
                        <h4>
                            <%= orders[i].user.fullname %>
                        </h4>
                        <div class="mt-3">
                            ثبت شده در تاریخ: <span class="badge badge-primary">
                                <%= formatDate(orders[i].createdAt) %>
                            </span>
                        </div>
                    </div>
                    <div class="">
                        <h5>
                            <%= orders[i].user.phoneNumber %>
                        </h5>
                    </div>
                </a>
                <% if (path === "/complet-orders") { %>
                    <a href="/dashboard/delete-order/<%= orders[i].id %> " class="btn btn-block btn-danger mb-2"><i class="fa fa-trash"></i></a>
                <% } %>
            <% } %>

        </div>
    </section>

    <%- include("../includes/footer.ejs") %>